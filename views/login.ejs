<%- include ("layouts/header") %>
<div class="container">
  <div class="row">

    <div class="col-lg-6 col-md-11 col-xl-6 mx-auto my-5">
      <%- include ("layouts/messages") %>
      <div class="card card-body border-success rounded-2">
        <div class="card  border-success  rounded-2">
          <h5 class="card-header bg-info text-white">LOGIN</h5>
          <div class="card-body">
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="">Email</label>
                <input type="email" name="email"  class="form-control" placeholder="" aria-describedby="helpId">
              </div>
              <div class="form-group">
                <label for="">Password</label>
                <input type="password" name="password"  class="form-control" placeholder="" aria-describedby="helpId">
              </div>
              <button type="submit" class="btn btn-block btn-success">Login</button>
            </form>
          </div>
        </div> 
      </div>
      
    </div>
  </div>
</div>
<%- include ("layouts/footer") %>